{
  "name": "graph-easy",
  "type": "module",
  "version": "0.0.0",
  "description": "TypeScript port of Graph::Easy (0.76) â€” ASCII output compatible",
  "license": "UNLICENSED",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist-cjs/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "graph-easy": "./dist/src/cli.js"
  },
  "files": [
    "dist/src/**/*",
    "dist-cjs/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && node scripts/write-cjs-package.mjs",
    "smoke": "npm run build --silent && npm run build:cjs --silent && node scripts/smoke.mjs",
    "prepublishOnly": "npm run build && npm run build:cjs",
    "as_ascii": "npm run build --silent && node dist/examples/as_ascii.js",
    "as_boxart": "npm run build --silent && node dist/examples/as_boxart.js",
    "as_txt": "npm run build --silent && node dist/examples/as_txt.js",
    "as_graphviz": "npm run build --silent && node dist/examples/as_graphviz.js",
    "compare_ascii": "npm run build --silent && node dist/scripts/compare_ascii.js",
    "compare_custom_ascii": "npm run build --silent && node dist/scripts/compare_custom_ascii.js",
    "compare_boxart": "npm run build --silent && node dist/scripts/compare_boxart.js",
    "compare_txt": "npm run build --silent && node dist/scripts/compare_txt.js",
    "compare_graphviz": "npm run build --silent && node dist/scripts/compare_graphviz.js",
    "parser_sweep": "npm run build --silent && node dist/scripts/parser_sweep.js",
    "release:patch": "npm run smoke && npm version patch -m \"release: %s\" && npm publish",
    "release:minor": "npm run smoke && npm version minor -m \"release: %s\" && npm publish",
    "release:major": "npm run smoke && npm version major -m \"release: %s\" && npm publish",
    "dev:site": "vite",
    "build:site": "vite build",
    "preview:site": "vite preview"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "@viz-js/viz": "^3.24.0"
  }
}
